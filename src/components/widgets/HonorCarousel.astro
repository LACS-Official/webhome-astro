---
interface Props {
  images?: Array<{ src: string; alt: string; title?: string }>;
}

const {
  images = [
    {
      src: '/images/platforms/mt.svg',
      alt: '2023年小米社区开聊了玩机达人贡献奖',
      title: '2023年小米社区开聊了玩机达人贡献奖',
    },
    {
      src: '/images/platforms/csdn.svg',
      alt: 'CSDN连续多月铁岭市博主周榜第一名',
      title: 'CSDN连续多月铁岭市博主周榜第一名',
    },
    { src: '/images/platforms/blibli.svg', alt: 'B站一万粉荣誉', title: 'B站一万粉荣誉' },
  ],
} = Astro.props;
---

<div class="honor-grid-container relative">
  <!-- 背景饰点 -->
  <div class="absolute inset-0 pointer-events-none -z-10 overflow-hidden rounded-[3rem]">
    <div class="absolute top-0 -left-10 w-32 h-32 bg-blue-500/10 rounded-full blur-[60px]"></div>
    <div class="absolute bottom-0 -right-10 w-32 h-32 bg-indigo-500/10 rounded-full blur-[60px]"></div>
  </div>

  <h3 class="text-3xl font-black text-slate-900 dark:text-white text-center mb-10 tracking-tight">荣誉展示</h3>

  <div class="honor-grid">
    {
      images.map((img) => (
        <div class="honor-card group">
          <div class="card-glow" />
          <div class="image-container">
            <img src={img.src} alt={img.alt} loading="lazy" />
          </div>
          {img.title && <span class="honor-title">{img.title}</span>}
        </div>
      ))
    }
  </div>
</div>

<style>
  .honor-grid-container {
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .honor-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .honor-card {
    position: relative;
    background-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 2.5rem;
    padding: 2.5rem 1.5rem;
    box-shadow:
      0 1px 2px rgba(0, 0, 0, 0.05),
      0 10px 20px -5px rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
  }

  .card-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(37, 99, 235, 0.05) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .honor-card:hover {
    transform: translateY(-12px);
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow:
      0 20px 40px -10px rgba(0, 0, 0, 0.1),
      0 30px 60px -15px rgba(0, 0, 0, 0.08);
    border-color: rgba(255, 255, 255, 0.8);
  }

  .honor-card:hover .card-glow {
    opacity: 1;
  }

  .image-container {
    width: 100%;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .honor-card img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.1));
    transition: all 0.6s ease;
  }

  .honor-card:hover img {
    transform: scale(1.1) rotate(2deg);
    filter: drop-shadow(0 12px 24px rgba(0, 0, 0, 0.15));
  }

  .honor-title {
    font-size: 0.95rem;
    font-weight: 900;
    color: #0f172a;
    text-align: center;
    line-height: 1.5;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (prefers-color-scheme: dark) {
    .honor-card {
      background-color: rgba(15, 23, 42, 0.4);
      border-color: rgba(255, 255, 255, 0.08);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
    }
    .honor-card:hover {
      background-color: rgba(15, 23, 42, 0.6);
      border-color: rgba(255, 255, 255, 0.15);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }
    .honor-title {
      color: #f8fafc;
    }
    .card-glow {
      background: radial-gradient(circle at center, rgba(37, 99, 235, 0.1) 0%, transparent 70%);
    }
  }

  @media (max-width: 768px) {
    .honor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .honor-card {
      padding: 2rem 1rem;
      border-radius: 2rem;
    }
  }

  @media (max-width: 480px) {
    .honor-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
</style>
