---
interface Props {
  images?: Array<{ src: string; alt: string; title?: string }>;
}

const {
  images = [
    {
      src: '/images/platforms/mt.svg',
      alt: '2023年小米社区开聊了玩机达人贡献奖',
      title: '2023年小米社区开聊了玩机达人贡献奖',
    },
    {
      src: '/images/platforms/csdn.svg',
      alt: 'CSDN连续多月铁岭市博主周榜第一名',
      title: 'CSDN连续多月铁岭市博主周榜第一名',
    },
    { src: '/images/platforms/blibli.svg', alt: 'B站一万粉荣誉', title: 'B站一万粉荣誉' },
  ],
} = Astro.props;
---

<div class="honor-grid-container">
  <h3 class="text-2xl font-bold text-slate-800 dark:text-white text-center mb-6">荣誉展示</h3>
  <div class="honor-grid">
    {
      images.map((img) => (
        <div class="honor-card">
          <img src={img.src} alt={img.alt} loading="lazy" />
          {img.title && <span class="honor-title">{img.title}</span>}
        </div>
      ))
    }
  </div>
</div>

<style>
  .honor-grid-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 1rem;
  }

  .honor-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  .honor-card {
    background-color: #fff;
    border-radius: 1rem;
    padding: 1.25rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .honor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .honor-card img {
    width: 100%;
    height: 80px;
    object-fit: contain;
    border-radius: 0.5rem;
  }

  .honor-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #475569;
    text-align: center;
  }

  @media (prefers-color-scheme: dark) {
    .honor-card {
      background-color: #1e293b;
    }
    .honor-title {
      color: #94a3b8;
    }
  }

  @media (max-width: 640px) {
    .honor-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>
