---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ParticleBackground from '~/components/ParticleBackground.astro';
import servicesHero from '~/assets/images/heroes/services-hero.jpg';
import AnimatedContent from '~/components/reactbits/AnimatedContent';
import ShinyText from '~/components/reactbits/ShinyText';

const metadata = {
  title: '软件外包服务',
};
---

<Layout metadata={metadata}>
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "serviceType": "Software Development",
      "provider": {
        "@type": "Organization",
        "name": "领创工作室",
        "url": "https://lacs.cc"
      },
      "areaServed": "Global",
      "description": "专业、高效的软件开发定制服务，包括桌面端、移动端、Web开发及自动化脚本。",
      "offers": {
        "@type": "Offer",
        "url": "https://lacs.cc/contact"
      }
    }
  </script>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="专业软件外包服务"
    title="专业、高效的软件开发定制服务"
    subtitle="领创工作室为您提供从桌面端到移动端，从Web开发到自动化脚本的全方位技术解决方案。质量第一，按需交付。"
    image={{
      src: servicesHero,
      alt: 'Software Development',
    }}
  >
    <div slot="actions" class="flex flex-col sm:flex-row gap-5 justify-center">
      <a
        href="/contact"
        class="bg-indigo-600 hover:bg-indigo-500 text-white px-10 py-4 text-lg font-bold rounded-full shadow-[0_0_20px_rgba(79,70,229,0.3)] transition-all duration-300 active:scale-95 flex items-center justify-center w-full sm:w-auto"
      >
        在线咨询 / 获取报价
      </a>
      <a
        href="#services"
        class="bg-white/5 backdrop-blur-[var(--glass-blur)] text-white border border-[var(--glass-border)] hover:bg-white/10 hover:border-white/40 px-10 py-4 text-lg font-bold rounded-full shadow-[var(--shadow-boutique-xl)] transition-all duration-300 active:scale-95 flex items-center justify-center w-full sm:w-auto"
      >
        探索范围
      </a>
    </div>
    <Fragment slot="bg">
      <ParticleBackground />
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <AnimatedContent client:visible distance={40}>
    <Features2
      id="services"
      title="我们的服务范围"
      subtitle="我们要做的不仅仅是代码，更是为您创造价值"
      tagline="服务范围"
      items={[
        {
          title: '桌面端开发',
          description:
            'Windows桌面应用（Python/PySide6、Electron、Tauri）、系统工具、自动化脚本、桌面管理应用。拥丰富的CSMT、ADMT等工具开发经验。',
          icon: 'tabler:device-desktop',
        },
        {
          title: '移动端开发',
          description: 'Android原生应用开发、Magisk模块开发、系统美美化工具等。我们在安卓玩机领域拥有深厚的积累。',
          icon: 'tabler:device-mobile',
        },
        {
          title: 'Web 开发',
          description: '企业官网建设、个人博客搭建、后台管理系统开发以及响应式网站设计。',
          icon: 'tabler:world',
        },
        {
          title: '定制脚本',
          description: '自动化办公脚本、数据处理工具、批量操作工具，助您提升工作效率，解放双手。',
          icon: 'tabler:script',
        },
        {
          title: '后端/API 开发',
          description: '高性能后端服务、RESTful API 接口开发、服务器部署与运维。',
          icon: 'tabler:server',
        },
        {
          title: '数据采集与分析',
          description: '网络爬虫、数据清洗、数据可视化报表生成，助您挖掘数据价值。',
          icon: 'tabler:chart-dots',
        },
      ]}
    >
      <Fragment slot="tagline">
        <ShinyText client:load text="服务范围" speed={3} color="#6366f1" />
      </Fragment>
      <Fragment slot="bg">
        <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
      </Fragment>
    </Features2>
  </AnimatedContent>

  <AnimatedContent client:visible distance={40} delay={0.2}>
    <Features2
      title="我们的技术栈"
      subtitle="使用主流且稳定的技术，确保项目的可维护性与高性能"
      columns={4}
      items={[
        {
          title: 'Python',
          description: 'PySide6, Tkinter, 自动化脚本, Flask/Django',
          icon: 'tabler:brand-python',
        },
        {
          title: 'JavaScript / TypeScript',
          description: 'Electron, Tauri, React, Node.js',
          icon: 'tabler:brand-javascript',
        },
        {
          title: 'Java',
          description: 'Android 原生开发, Spring Boot 后端',
          icon: 'tabler:coffee',
        },
        {
          title: 'Rust',
          description: '高性能系统工具, Tauri 后端',
          icon: 'tabler:brand-rust',
        },
        {
          title: 'Android',
          description: 'Java / Kotlin, Magisk模块, Xposed',
          icon: 'tabler:brand-android',
        },
        {
          title: '前端技术',
          description: 'Astro, TailwindCSS, HTML/CSS/JS',
          icon: 'tabler:brand-html5',
        },
        {
          title: '系统自动化',
          description: '批处理 (Batch), PowerShell, Shell',
          icon: 'tabler:terminal',
        },
        {
          title: '设计与体验',
          description: 'UI/UX 设计, 响应式布局, Figma',
          icon: 'tabler:palette',
        },
      ]}
    >
      <Fragment slot="tagline">
        <ShinyText client:load text="技术实力" speed={4} color="#6366f1" />
      </Fragment>
    </Features2>
  </AnimatedContent>

  <!-- Steps Widget ****************** -->

  <Steps
    title="服务流程"
    subtitle="规范化的开发流程，确保项目按时按质交付"
    items={[
      {
        title: 'Step 1: 需求沟通',
        description: '深入了解您的业务需求和痛点，确定项目的功能范围和技术要求。',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: 评估报价',
        description: '根据需求文档进行技术评估，提供详细的项目报价和开发周期预估。',
        icon: 'tabler:file-invoice',
      },
      {
        title: 'Step 3: 签订协议',
        description: '双方确认合作细节，签订开发合同或协议，保障双方权益。',
        icon: 'tabler:writing-sign',
      },
      {
        title: 'Step 4: 开发交付',
        description: '进入开发阶段，定期汇报进度。完成后提交测试版本供您体验。',
        icon: 'tabler:code',
      },
      {
        title: 'Step 5: 测试验收 & 售后',
        description: '您确认无误后交付源码或最终产品。提供持续的技术支持和维护服务。',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1531403009284-440f080d1e12?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80',
      alt: 'Steps image',
    }}
  />

  <Features2
    title="为什么选择我们？"
    subtitle="专业、靠谱、高性价比"
    columns={2}
    items={[
      {
        title: '丰富的开发经验',
        description: '多年技术积累，拥有多个成功上线和运营的工具类产品。',
        icon: 'tabler:award',
      },
      {
        title: '多平台覆盖能力',
        description: '从桌面到移动端，从Web到脚本，我们都能搞定。',
        icon: 'tabler:devices',
      },
      {
        title: '源码交付 (可选)',
        description: '支持源码交付，让您拥有项目的完全控制权，无后顾之忧。',
        icon: 'tabler:code-circle-2',
      },
      {
        title: '持续技术支持',
        description: '提供完善的售后服务和技术维护，确保持续稳定运行。',
        icon: 'tabler:headset',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
      <div
        class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1557683316-973673baf926?ixlib=rb-4.0.3&auto=format&fit=crop&w=2029&q=80')] bg-fixed bg-cover bg-center opacity-10 dark:opacity-20"
      >
      </div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="常见问题"
    subtitle="解答您可能关心的几个问题"
    items={[
      {
        title: '开发周期通常是多久？',
        description:
          '开发周期取决于项目的复杂度。简单的脚本可能仅需1-2天，而复杂的应用可能需要几周。我们会在评估阶段给出一个明确的时间表。',
      },
      {
        title: '是否提供源码？',
        description: '是的，我们支持源码交付。具体取决于我们的合作模式，通常定制开发是包含源码交付的。',
      },
      {
        title: '售后维护怎么算？',
        description: '我们在交付后通常提供一定期限的免费Bug修复。如需长期的功能更新或运维，可以签订长期的维护协议。',
      },
      {
        title: '如何付款？',
        description: '我们支持多种支付方式，包括支付宝、微信支付或对公转账。通常采用分阶段付款的方式。',
      },
    ]}
  />

  <!-- Create a simple "Cases" section using Content widget for now as a placeholder for "Success Projects" since we don't have a specific Cases widget loaded with data -->
  <Content
    isReversed
    title="经典案例"
    subtitle="我们在多个领域都有成功的实践案例"
    items={[
      {
        title: '玩机管家',
        description:
          '基于 Tauri + React + TypeScript 开发的跨平台桌面应用，集成了设备管理、工具箱等功能。用户量 2000+。',
      },
      {
        title: '澎湃解锁工具箱',
        description: '基于 Python (PySide6) 开发的 Windows 桌面应用，界面精美，功能强大。累积用户近万人。',
      },
      {
        title: '一键Root工具箱',
        description: '自动化脚本工具，帮助用户轻松获取设备权限。',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Project Case',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="contact"
    title="准备好开始了吗？"
    subtitle="立即联系我们，获取您的专属报价方案。"
    actions={[
      {
        variant: 'primary',
        text: '联系我们 / 获取报价',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
